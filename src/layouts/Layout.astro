---
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es-MX">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Somos la Asociación Mexicana de Desarrollo Motriz Infantil, la comunidad de apoyo que fomenta el compañerismo y la disciplina a niveles profesionales." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/images/favicon.png">
		<meta name="generator" content={Astro.generator} />
		<meta name="seobility" content="5db4afcf6424efec7d71c32410fdba39"> <!-- Para www.seobility.net -->
		<title>{ title? title : "Selección AMDI Jalisco ⚽" }</title>
		<ViewTransitions></ViewTransitions>
	</head>
	<body class="bg-black">
		<slot />
		<Footer></Footer>
	</body>
</html>
