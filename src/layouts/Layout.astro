---
import Footer from "@components/Footer.astro";
import BaseHead from "@components/BaseHead.astro";
import Nav from "@components/Nav.astro";
import Trabajando from "@components/Trabajando.astro";

export interface Props {
	title: string;
	description: string;
	borrador?: boolean;
}

const { title, description, borrador } = Astro.props;
---

<!doctype html>
<html lang="es-MX">
	<head>
		<BaseHead
			title={title ?? "Selección AMDI Jalisco ⚽"}
			description={description ??
				"Somos la Asociación Mexicana de Desarrollo Motriz Infantil, la comunidad de apoyo que fomenta el compañerismo y la disciplina a niveles profesionales."}
		/>
	</head>
	<body class="bg-black">
		<Nav />
		<br/>
		<br/>
		<slot />
		<Trabajando borrador={borrador} />
		<Footer />
	</body>
</html>
