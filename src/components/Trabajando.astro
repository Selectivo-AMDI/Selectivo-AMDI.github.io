---
import { Image } from "astro:assets";
import chambeando from "@images/trabajando.jpeg";

export interface Props {
    borrador?: boolean;
}

const { borrador } = Astro.props;
---

{borrador && (
    <div class="text-white text-center items-center border-2 m-2 justify-center content-center">
        <h1 class="text-4xl font-medium">Sitio en construcción</h1>
        <p>
            Ya mero sale esta página, falta poquito, así que no se desesperen.
        </p>
        <Image
            src={chambeando}
            class="p-4 flex-shrink-0 m-auto"
            alt="gato chambeando"
            height="500"
            width="500"
        />
        <div class="p-8">
            <a
                href="/"
                class="bg-blue-700 hover:bg-blue-800 p-4 font-medium rounded"
            >
                Regresar al inicio
            </a>
        </div>
    </div>
)}
