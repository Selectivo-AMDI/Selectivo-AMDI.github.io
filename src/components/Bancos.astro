---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

import {
  DIRECCION,
  HORARIO_INCIO,
  HORARIO_CIERRE,
  HORARIO_DIA_INICIO,
  HORARIO_DIA_CIERRE,
} from "../constants";
import bancos from "@data/bancos.json";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/*.webp",
);
---

<div id="opciones">
  <!-- Bancos -->
  {
    bancos.map(({ img, nombre, CLABE, beneficiario, alt }) => (
      <div class="bg-zinc-900 md:flex items-center p-4 rounded m-1">
        <div class="md:flex-shrink-0">
          <Image
            src={images[`/src/images/${img}`]()}
            alt={alt}
            height={125}
            width={125}
          />
        </div>
        <div class="ml-4">
          <h2 class="text-wrap text-left text-2xl font-bold text-gray-400">
            {nombre}
          </h2>
          <ul class="text-left">
            <li>
              <p class="text-wrap">
                Beneficiario: <span class="font-medium">{beneficiario}</span>
              </p>
            </li>
            <li>
              <p class="text-wrap">
                CLABE: <span class="text-wrap font-medium">{CLABE}</span>
              </p>
            </li>
          </ul>
        </div>
      </div>
    ))
  }
  <!-- Otras ayudas -->
  <div id="PorEspecie" class="bg-zinc-900">
    <div class="md:flex items-center p-4">
      <div class="flex-shrink-0">
        <Image
          class="h-auto max-w-32 object-fill rounded-lg"
          src={import("/src/images/ayuda.webp")}
          alt="Manos que se ayudan"
        />
      </div>
      <div class="ml-4">
        <h2 class="text-2xl font-bold text-gray-400 text-wrap">
          Donaci√≥n por especie
        </h2>
        <ul class="text-left">
          <li>
            <p>Encuentranos en:</p>
            <address>{DIRECCION}</address>
          </li>
          <li>
            <p>
              {`Estamos de ${HORARIO_DIA_INICIO} a ${HORARIO_DIA_CIERRE} de: `}
            </p>
            <time datetime={HORARIO_INCIO}>{HORARIO_INCIO}</time> - <time
              datetime={HORARIO_CIERRE}>{HORARIO_CIERRE}</time
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
