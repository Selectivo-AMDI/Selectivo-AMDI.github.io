---
import type { ImageMetadata } from "astro";
import { redes } from "@data/social.json";
import { Image } from "astro:assets";

const iconosRedes = import.meta.glob< { default: ImageMetadata } >("/src/images/redes/*");
---

<div id="redes">
  {
    redes.map(({ img, href, alt }) => (
      <a href={href} target="_blank" class="inline-flex m-1">
        <Image
          src={iconosRedes[`/src/images/redes/${img}`]()}
          alt={`Perfil de ${alt}`}
          title={`Â¡Siguenos en ${alt}!`}
          height="32"
          width="32"
        />
      </a>
    ))
  }
</div>
