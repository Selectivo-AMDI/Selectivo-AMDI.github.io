---
import "../styles/global.css";
import Social from "@components/Social.astro";
import { DIRECCION, TELEFONO, CORREO, NOMBRE } from "../constants";
import BtnDonar from "@components/BtnDonar.astro";
---
<!-- bg-[#c3332b] -->
<footer
  class="text-center *:p-4 center-items justify-center bg-[url('/src/footer-bg.svg')] bg-no-repeat bg-cover bg-black/50 bg-blend-darken"
> <!--bg-gray-700  original -->
  <address class="pb-4" id="contacto">
    <p>Dirección: {DIRECCION}</p>
    <a href=`tel:${TELEFONO}`>Celular: {TELEFONO}</a>
    <br />
    <a href=`mailto:${CORREO}`>Email: {CORREO}</a>
    <br />
    <Social />
  </address>
  <BtnDonar />
  <p class="opacity-20">
    {NOMBRE}© {new Date().getFullYear()}, derechos reservados.
  </p>
</footer>
